<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
        android:id="@+id/scroll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_homepage"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 顶部 -->
            <include layout="@layout/layout_homepage_top" />

            <!-- 开源项目 -->
            <include layout="@layout/layout_homepage_projects" />

            <!-- 博客文章 -->
            <include layout="@layout/layout_homepage_blogs" />

            <!-- 留言板 -->
            <include layout="@layout/layout_homepage_msg_board"/>

            <!-- 底部 -->
            <include layout="@layout/layout_homepage_footer" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>